<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="Controller">
    <HBox spacing="10">
        <TextField fx:id="usernameField" promptText="Username"/>
        <TextField fx:id="messageField" promptText="Message"/>
        <Button text="Send" onAction="#onSendClick"/>
    </HBox>
    <TextArea fx:id="chatArea" prefHeight="200" editable="false"/>
</VBox>
